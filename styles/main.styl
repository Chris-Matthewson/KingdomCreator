.change-size-button
  position: fixed
  right: 0
  width: 48px
  height: 48px
  bottom: 5px
  border: 1px solid #ccc
  border-radius: 5px 0 0 5px
  border-right: 0
  background: rgba(255, 255, 255, 0.9)
  cursor: pointer
  -webkit-user-select: none
  -moz-user-select: none
  -ms-user-select: none
  user-select: none
  z-index: 500

  .change-size-button-icon
    display: block
    margin: 6px
    height: 36px
    width: 36px
    background-image: url("data:image/svg+xml;utf8;base64,")
    background-size: contain

    &.enlarged
      background-image: url("data:image/svg+xml;utf8;base64,")

footer
  padding: 10px
  border-top: 1px #ddd solid
  margin: 10px -10px -10px -10px
  font-size: 12px
  text-align: center

// Move sidebar to the top
@media (max-width: 750px)
  label.checkbox
    position: relative
    left: 5px
    font-size: 23px
    line-height: 27px

    input[type=checkbox]
    input[type=radio]
      position: relative
      margin-right: 12px!important
      -webkit-transform: scale(1.5,1.5)
      top: -2px

  .header
    margin: 5px -5px

  .content
    .sidebar
      float: none
      width: auto
      margin: 5px -5px
    .main
      margin: 5px -5px 0

@media (max-width: 425px)
  header
    .condensed-menu-button
      right: 0px

@media (max-width: 400px)
  header
    .title
      font-size: 24px

    h2.tagline
      font-size 14px

  label.checkbox
    position: relative
    left: 5px
    font-size: 20px
    line-height: 25px

    input[type=checkbox]
    input[type=radio]
      position: relative
      margin-right: 12px!important
      -webkit-transform: scale(1.5,1.5)
      top: -2px

