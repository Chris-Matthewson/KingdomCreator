@import "variables"

body
   margin: 10px
   font-family: primary-font

h1
   color: #02779e
   max-width: 1200px
   font-size: 28px
   border-bottom: 1px solid #ccc
   margin: 12px auto

.clear
   clear: both
   min-height: 1px

.button
   display: block
   padding: 5px
   margin-top: 10px
   text-align: center
   border: 1px solid #888
   border-radius: 5px
   font-size: 20px
   background: highlight-blue
   color: #fff
   box-shadow: inset 0 1px 2px rgba(255,255,255,0.8), inset 0 -1px 2px rgba(0,0,0,0.6)
   text-decoration: none
   &:hover
      box-shadow: inset 0 1px 2px rgba(0,0,0,0.6), inset 0 -1px 2px rgba(0,0,0,0.6)

.content
   max-width: 1200px
   position: relative
   margin: 10px auto

   .sidebar
      float: right
      width: 192px

      h1
         margin: 8px 0 8px 0
         border-bottom: 1px solid #ccc
         color: #333

      h1:first-child
         margin-top: 0
   
   .filters
      padding: 10px
      border-radius: 10px
      border: 1px solid #ccc
      margin-top: 2px

      input[type=checkbox]
         display: inline-block
         margin-right: 5px

   .meta
      margin-top: 10px
      padding: 10px
      border-radius: 10px
      border: 1px solid #ccc

      h1
         font-size: 20px

      .recommendation
         font-size: 14px
         span
            font-weight: bold


   .main
      margin-right: 200px

      .loading 
         text-align: center
         font-size: 50px
         padding-top: 40px

.cards
   .card-wrap
      width: 20%
      float: left

   .card
      margin: 2px 2px
      position: relative
      cursor: pointer
      min-height: 250px

      .highlight
         position: absolute
         top: 1px
         right: 1px
         bottom: 1px
         left: 1px
         border: 2px solid highlight-blue
         background: rgba(2,119,158,0.65)
         opacity: 1

      .set-name-wrap
         position: absolute
         font-size: 18px
         margin-top: -13px
         top: 50%
         width: 100%
         height: 30px
         text-align: center

         .set-name
            padding: 6px 8px
            margin: 0 auto
            display: inline-block
            color: #fff
            background: rgba(30,30,30,0.7)
            text-shadow: 1px 1px 4px #000

            &.baseset
               color: base-set-color
            &.intrigue
               color: intrigue-color
            &.seaside
               color: seaside-color
            &.alchemy
               color: alchemy-color
            &.prosperity
               color: prosperity-color
            &.cornucopia
               color: cornucopia-color
            &.hinderlands
               color: hinderlands-color
            &.darkages
               color: darkages-color
            &.guilds
               color: guilds-color

      &.keep .highlight
         opacity: 0

      &.treasure .name
         color: treasure-color

      &.victory .name
         color: victory-color

      img
         width: 100%
         display: block
      
.footer
   padding: 10px
   border-top: 1px #ddd solid
   margin: 10px -10px -10px -10px
   font-size: 12px
   text-align: center

@media (max-width: 1070px)
   .cards .card-wrap
      width: 25%

@media (max-width: 905px)
   .cards
      .card-wrap
         width: 33.3333%
      .card
         min-height: 170px

// Move sidebar to the top
@media (max-width: 600px)
   body 
      margin: 5px
   

   .content
      .sidebar
         float: none
         width: auto
         margin-top: 10px
    
         label
            position: relative
            left: 5px
            font-size: 23px
            line-height: 27px

            input
               position: relative
               margin-right: 12px!important
               -webkit-transform: scale(1.5,1.5)
               top: -2px

      .meta
         h1
            font-size: 26px
         .recommendation
            font-size: 18px


      .main
         margin: 5px 0 0 0 

      .cards
         .card
            min-height: 140px
         .set-name-wrap 
            font-size: 16px

