@import "variables"

body
   margin: 10px
   font-family: primary-font

h1
   color: #02779e
   max-width: 1200px
   font-size: 28px
   border-bottom: 1px solid #ccc
   margin: 12px auto

.content
   max-width: 1200px
   position: relative
   margin: 10px auto

   .sidebar
      float: right
      width: 172px
      padding: 10px
      border-radius: 10px
      border: 1px solid #ccc
      margin-top: 2px
   
      h1
         margin: 0 0 8px 0
         border-bottom: 1px solid #ccc
         color: #333

      input[type=checkbox]
         display: inline-block
         margin-right: 5px

      .randomizeButton
         display: block
         padding: 5px
         margin-top: 10px
         text-align: center
         border: 1px solid #888
         border-radius: 5px
         font-size: 20px
         background: highlight-blue
         color: #fff
         box-shadow: inset 0 1px 2px rgba(255,255,255,0.8), inset 0 -1px 2px rgba(0,0,0,0.6)
         text-decoration: none
         &:hover
            box-shadow: inset 0 1px 2px rgba(0,0,0,0.6), inset 0 -1px 2px rgba(0,0,0,0.6)


   .main
      margin-right: 200px

      .loading 
         text-align: center
         font-size: 50px
         padding-top: 40px

.cards
   .card-wrap
      width: 20%
      float: left

   .card
      margin: 2px 2px
      position: relative
      cursor: pointer
      min-height: 250px

      .highlight
         position: absolute
         top: 1px
         right: 1px
         bottom: 1px
         left: 1px
         border: 2px solid highlight-blue
         background: rgba(2,119,158,0.15)
         opacity: 0

      .set-name-wrap
         position: absolute
         font-size: 18px
         margin-top: -13px
         top: 50%
         width: 100%
         height: 30px
         text-align: center

         .set-name
            padding: 6px 8px
            margin: 0 auto
            display: inline-block
            color: #fff
            background: rgba(30,30,30,0.7)

            &.baseset
               color: base-set-color
            &.intrigue
               color: intrigue-color
            &.seaside
               color: seaside-color
            &.alchemy
               color: alchemy-color
            &.prosperity
               color: prosperity-color
            &.cornucopia
               color: cornucopia-color
            &.hinderlands
               color: hinderlands-color
            &.darkages
               color: darkages-color
            &.guilds
               color: guilds-color

      &.keep .highlight
         opacity: 1

      &.treasure .name
         color: treasure-color

      &.victory .name
         color: victory-color

      img
         width: 100%
         display: block
      

@media (max-width: 1070px)
   .cards .card-wrap
      width: 25%

@media (max-width: 905px)
   .cards
      .card-wrap
         width: 33.3333%
      .card
         min-height: 170px

