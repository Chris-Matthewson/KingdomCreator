{
  "compilerOptions": {
    "module": "amd",
    "strict": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false, // CHANGE ONCE REFACTORING IS DONE
    "noUnusedParameters": false, // CHANGE ONCE REFACTORING IS DONE
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "sourceMap": true,
    "preserveConstEnums": true,
    "downlevelIteration": true,
    "target": "es5",
    "types": [
      "google.analytics",
      "jquery",
      "knockout",
      "vex-js",
    ],
    "lib": [
      "DOM",
      "ES5",
      "ScriptHost",
      "ES2015",
    ],
  },
  "include": [
    "./src/**/*",
  ],
  "exclude": [
    "node_modules"
  ]
}
