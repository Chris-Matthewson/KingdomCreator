doctype 5
html
   head
      title Kingdom Creator
      meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")
      meta(name="viewport", content="width=device-width, initial-scale=1, maximum-scale=1.0, user-scalable=no")
      meta(name="description", content="Dominion randomizer for desktop and mobile.")
      meta(name="keywords", content="dominion, randomizer, dominion randomizer, dominion deck randomizer, deck randomizer, kingdom, kingdom creator, kingdom creating")
      link(href='https://fonts.googleapis.com/css?family=Alegreya+Sans+SC|Alegreya+Sans:300' rel='stylesheet' type='text/css')
      != css("main")

      - if (isProduction)
         script.
            if (window.location.hostname.indexOf('localhost') == -1
                  && window.location.protocol.indexOf('https') != 0) {
               window.location.protocol = 'https:';
            }

         script.
              (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
              (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
              m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
              })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

              ga('create', 'UA-33669676-2', 'auto');
              ga('send', 'pageview');

      script.
         window.DominionSets = !{JSON.stringify(sets)};

      block head

   body
      .condensed-menu(data-bind="if: isCondensed, showMenu: {show: showMenu, enabled: isCondensed}")
         ul.condensed-menu_items(data-bind="foreach: menuItems")
            li.condensed-menu_item(data-bind="css: {active: isActive}")
               a.condensed-menu_item_link(data-bind="attr: {href: url}, text: title")

      header
         .title-container
            h1.title
              a.title_link(href="/index.html") Kingdom Creator
            h2.tagline(data-bind="text: subtitle")
         .condensed-menu-button(data-bind="click: toggleMenu, visible: isCondensed")
         .menu(data-bind="if: !isCondensed()")
           ul.menu_items(data-bind="foreach: menuItems")
              li.menu_item(data-bind="css: {active: isActive}")
                 a.menu_item_link(data-bind="attr: {href: url}, text: title")
        
      .content
         block content

