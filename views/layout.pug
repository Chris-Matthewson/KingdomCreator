doctype 5
html
  head
    title Dominion Randomizer
    meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")
    meta(name="viewport", content="width=device-width, initial-scale=1, maximum-scale=1.0, user-scalable=no")
    meta(name="description", content="Dominion randomizer for desktop and mobile.")
    meta(name="keywords", content="dominion, randomizer, dominion randomizer, dominion deck randomizer, dominion card picker, deck randomizer, kingdom, kingdom creator, kingdom creating")
    link(href='https://fonts.googleapis.com/css?family=Alegreya+Sans+SC|Alegreya+Sans:300',
        rel="stylesheet", type="text/css")
    link(href="https://cdnjs.cloudflare.com/ajax/libs/vex-js/2.0.1/css/vex.min.css",
        rel="stylesheet", type="text/css")
    link(href="https://cdnjs.cloudflare.com/ajax/libs/vex-js/2.0.1/css/vex-theme-os.min.css",
        rel="stylesheet", type="text/css")

    script(src="https://code.jquery.com/jquery-3.4.1.min.js",
        integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo=",
        crossorigin="anonymous")
    script(src="https://cdn.jsdelivr.net/npm/jquery.cookie@1.4.1/jquery.cookie.min.js")
    script(src="https://cdn.jsdelivr.net/npm/jquery.imgpreload@1.6.3/jquery.imgpreload.min.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/knockout/3.5.0/knockout-min.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/vex-js/2.0.1/js/vex.combined.min.js")
    script(src="/dominion-content.js")

    script(async, src="https://www.googletagmanager.com/gtag/js?id=UA-33669676-2")
    script.
      const isProduction = window.location.hostname.indexOf("localhost") == -1;
      if (isProduction) {
        if (window.location.protocol.indexOf("https") != 0) {
          window.location.protocol = "https:";
        }
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag("js", new Date());
        gtag("config", "UA-33669676-2");
      }

    block head

  body(data-bind="css:{condensed: isCondensed}")
    .condensed-menu(data-bind="if: isCondensed, showMenu: {show: showMenu, enabled: isCondensed}")
      ul.condensed-menu_items(data-bind="foreach: menuItems")
        li.condensed-menu_item(data-bind="css: {active: isActive}")
          a.condensed-menu_item_link(data-bind="attr: {href: url}, text: title")

    header
      .title-container
        h1.title
          a.title_link(href="/index.html") Dominion Randomizer
        h2.tagline(data-bind="text: subtitle")
      .condensed-menu-button(data-bind="click: toggleMenu, visible: isCondensed")
      .menu(data-bind="if: !isCondensed()")
        ul.menu_items(data-bind="foreach: menuItems")
          li.menu_item(data-bind="css: {active: isActive}")
            a.menu_item_link(data-bind="attr: {href: url}, text: title")
      
    .content
      block content

